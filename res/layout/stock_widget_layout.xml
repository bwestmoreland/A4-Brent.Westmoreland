<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetUpdate"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="horizontal" 
	android:baselineAligned="false"
	android:background="@drawable/rounded_rectangle">

	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_weight=".3"
		android:layout_height="match_parent" 
		android:orientation="vertical">
		<TextView 
		    android:id="@+id/symbol1Update" 
		    style="@android:style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_margin="4dip" 
			android:text="@string/label_symbol" />

		<TextView 
		    android:id="@+id/price1Update" 
		    style="@android:style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_margin="4dip" 
			android:text="@string/label_symbol" />
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_weight=".3"
		android:layout_height="match_parent" 
		android:orientation="vertical">
		<TextView 
		    android:id="@+id/symbol2Update" 
		    style="@android:style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_margin="4dip" 
			android:text="@string/label_symbol" />

		<TextView 
		    android:id="@+id/price2Update" 
		    style="@android:style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_margin="4dip" 
			android:text="@string/label_symbol" />
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_weight=".3"
		android:layout_height="match_parent" 
		android:orientation="vertical">
		<TextView 
		    android:id="@+id/symbol3Update" 
		    style="@android:style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_margin="4dip" 
			android:text="@string/label_symbol" />

		<TextView 
		    android:id="@+id/price3Update" 
		    style="@android:style/TextAppearance.Medium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" 
			android:layout_margin="4dip" 
			android:text="@string/label_symbol" />
	</LinearLayout>
</LinearLayout>
